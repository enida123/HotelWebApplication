@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication9.Areas.Administrator.ViewModels.LokacijeDodajGradVM

@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/Layout1.cshtml";

}
<!DOCTYPE html>



<div class="form-style-5">

   

    <form asp-action="SnimiGrad" asp-controller="Lokacije" asp-area="Administrator">
        <input type="hidden" asp-for="grad.id" />
        <input type="hidden" asp-for="drzaavaID" />


       
        <fieldset>
            @if (Model.grad.id == 0)
        {
            <legend><i class=" fa fa-city"></i> Novi grad</legend>

    }
    else
    {
        <legend><i class=" fa fa-city"></i> Editovanje podataka o gradu</legend>

}
            </fieldset>


                <label asp-for="grad.Naziv" class="control-label">Naziv</label>
                <input asp-for="grad.Naziv" class="form-control"  />
                <span asp-validation-for="grad.Naziv" class="text-danger"></span>
            
            <div class="form-group">

                <label asp-for="nazivDrzava" class="control-label">Drzava</label>
                <input asp-for="nazivDrzava" class="form-control" readonly />

            </div>






            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Sacuvaj</button>
                <a asp-action="Index"  class="btn btn-primary" style="background-color:lightgray;color:black"><i class="fa fa-times"></i> Odustani</a>
            </div>
    </form>
    
</div>





