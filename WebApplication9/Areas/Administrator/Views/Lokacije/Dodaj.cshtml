@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApplication9.Areas.Administrator.ViewModels.LokacijeDodajVM

@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/Layout1.cshtml";

}
<!DOCTYPE html>

<head>
    <style>
    </style>
</head>
<header class="panel-heading"></header>

<div class="form-style-5">
    <form asp-action="Snimi">
        <input type="hidden" asp-for="Drzava.id" />
        <fieldset>
            @if (Model.Drzava.id == 0)
            {
                <legend><i class=" fa fa-city"></i> Nova drzava</legend>

            }
            else
            {
                <legend><i class=" fa fa-city"></i> Editovanje podataka o drzavi</legend>

            }
            <label>Naziv:</label>
            <input type="text" asp-for="Drzava.Naziv" placeholder="Naziv">
            <span asp-validation-for="Drzava.Naziv" class=" text-danger"></span>
            

        </fieldset>
        <br />


        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Sacuvaj</button>
        <a asp-action="Index" class="btn btn-primary" style="background-color:lightgray;color:black"><i class="fa fa-times"></i> Odustani</a>

    </form>

</div>



